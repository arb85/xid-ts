{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "outDir": "./dist",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": [
		"src/**/*.ts",
		"test/**/*.ts"
	],
	"exclude": [
		"src/**/*.test.ts",
		"node_modules",
		"dist",
		"debug"
	]
}
